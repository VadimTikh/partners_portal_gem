# Environment Configuration for Miomente Partner Portal
# Copy this file to .env.local for local development

# ================================
# Application Settings
# ================================
NODE_ENV=development
APP_URL=http://localhost:3000

# Set to "true" to use real API instead of mock data
NEXT_PUBLIC_USE_REAL_API=true

# ================================
# PostgreSQL (Application Database)
# ================================
# PostgreSQL connection for users, sessions, course requests
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DATABASE=miomente_portal

# Alternative: Use connection string instead of individual params
# DATABASE_URL=postgresql://postgres:your-password@localhost:5432/miomente_portal

# ================================
# MySQL (Magento)
# ================================
# Magento database connection (for course/date management)
MAGENTO_DB_HOST=localhost
MAGENTO_DB_PORT=3306
MAGENTO_DB_USER=magento_user
MAGENTO_DB_PASSWORD=your-mysql-password
MAGENTO_DB_NAME=miomente_stage

# ================================
# Authentication
# ================================
# JWT secret for signing tokens (minimum 32 characters!)
JWT_SECRET=change-this-to-a-secure-random-string-at-least-32-chars

# Session expiry in days (default: 14)
SESSION_EXPIRY_DAYS=14

# ================================
# Email (SendGrid)
# ================================
# SendGrid API key for sending emails
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# From address for emails
EMAIL_FROM=bestellung@miomente.de
EMAIL_FROM_NAME=Miomente

# Development only: Redirect all emails to this address instead of actual recipients
# Remove or leave empty in production!
DEV_EMAIL_OVERRIDE=your-dev-email@example.com

# ================================
# Odoo Integration
# ================================
# Odoo JSON-RPC API for helpdesk tickets
ODOO_URL=https://odoo.example.com/jsonrpc
ODOO_DB=your-odoo-database
ODOO_USER_ID=1
ODOO_API_KEY=your-odoo-api-key

# ================================
# Production Notes
# ================================
# For production, ensure:
# 1. NODE_ENV=production
# 2. APP_URL points to your production domain
# 3. JWT_SECRET is a strong, unique random string
# 4. DEV_EMAIL_OVERRIDE is NOT set (or empty)
# 5. NEXT_PUBLIC_USE_REAL_API=true
