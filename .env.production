# =============================================================================
# Miomente Partners Portal - PRODUCTION Environment
# =============================================================================
# This configuration connects to PRODUCTION Magento and Odoo
# Emails are sent to actual recipients - BE CAREFUL!
# =============================================================================

NODE_ENV=production

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=https://partners.miomente.de

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Set a strong random secret in production!
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Magento Database (PRODUCTION)
# -----------------------------------------------------------------------------
# Connect to production Magento database
MAGENTO_DB_HOST=prod-db.miomente.de
MAGENTO_DB_PORT=3306
MAGENTO_DB_NAME=magento_production
MAGENTO_DB_USER=prod_user
MAGENTO_DB_PASSWORD=prod_password
MAGENTO_DB_CONNECTION_LIMIT=20

# -----------------------------------------------------------------------------
# Odoo Integration (PRODUCTION)
# -----------------------------------------------------------------------------
# Connect to production Odoo instance
ODOO_URL=https://odoo.miomente.de
ODOO_DB=miomente_production
ODOO_USER=api_user
ODOO_PASSWORD=prod_api_key

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.miomente.de
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@miomente.de
SMTP_PASSWORD=prod_smtp_password

EMAIL_FROM_NAME=Miomente Partners Portal
EMAIL_FROM_ADDRESS=noreply@miomente.de

# IMPORTANT: Leave empty in production to send to actual recipients
DEV_EMAIL_REDIRECT=

# -----------------------------------------------------------------------------
# Magento Media URL
# -----------------------------------------------------------------------------
MAGENTO_MEDIA_URL=https://www.miomente.de/media/catalog/product

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_MOCK_MODE=false
ENABLE_DEBUG_LOGGING=false
